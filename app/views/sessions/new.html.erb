<h1 align="center"> Login</h1>

<div class="row">
	<div class='col-xs-12'>
	        <%= form_for(:session, :html => {class: "form-horizontal", role: "form"},url: login_path) do |f| %>
	            <div class="form-group">
	            	<div class="control-label col-sm-2">
	 	              <%= f.label :email %>    
	 	            </div>
	 	            <div class="col-sm-8">
	 	              <%= f.email_field :email, class: "form-control", placeholder: "Enter Email" %>	
	          		</div>
	          	</div>
	          	<div class="form-group">
	            	<div class="control-label col-sm-2">
	 	              <%= f.label :password %>    
	 	            </div>
	 	            <div class="col-sm-8">
	 	              <%= f.password_field :password_digest, class: "form-control", placeholder: "Enter Password" %>	
	          		</div>
	          	</div>
	            <div class="form-group">
	            	<div class="col-sm-offset-2 col-sm-10">
	 	              <%= f.submit "Login", class: 'btn btn-primary btn-lg' %>
	 	             </div>
	            </div>
	        <% end  %>
	       <div class="col-md-4 col-md-offset-4"> New user? <%= link_to "Sign up now!", signup_path %></div>
	</div>
</div>
